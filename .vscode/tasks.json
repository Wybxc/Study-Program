{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc(test)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "\"${file}\"",
                "-o",
                "\"${file}.exe\""
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "identifier": "test"
        },
        {
            "label": "gcc(build)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "\"${file}\"",
                "-o",
                "\"${file}.exe\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "identifier": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "\"${file}.exe\"",
            "dependsOn":"test"
        }
    ]
}